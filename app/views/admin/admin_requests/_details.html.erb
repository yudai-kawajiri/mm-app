<%# 承認リクエスト詳細表示 %>
<% admin_request = local_assigns[:admin_request] || local_assigns[:resource] %>
<% request_class = admin_request.class %>

<div class="pt-1">
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
          <%= request_class.human_attribute_name(:user_id) %>
        </label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= admin_request.user.name %>
          <div class="text-muted" style="font-size: 0.9em;">
            <%= admin_request.user.email %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
          <%= t('activerecord.attributes.admin_request.company_id') %>
        </label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= admin_request.company&.name || '-' %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
          <%= request_class.human_attribute_name(:store_id) %>
        </label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= admin_request.store&.name || '-' %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
          <%= request_class.human_attribute_name(:request_type) %>
        </label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <span class="badge bg-info">
            <%= t("activerecord.enums.admin_request.request_type.#{admin_request.request_type}") %>
          </span>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
          <%= request_class.human_attribute_name(:status) %>
        </label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <% if admin_request.pending? %>
            <span class="badge bg-warning text-dark">
              <i class="bi bi-clock me-1"></i>
              <%= t('activerecord.enums.admin_request.status.pending') %>
            </span>
          <% elsif admin_request.approved? %>
            <span class="badge bg-success">
              <i class="bi bi-check-circle me-1"></i>
              <%= t('activerecord.enums.admin_request.status.approved') %>
            </span>
          <% else %>
            <span class="badge bg-danger">
              <i class="bi bi-x-circle me-1"></i>
              <%= t('activerecord.enums.admin_request.status.rejected') %>
            </span>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-12">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
          <%= request_class.human_attribute_name(:message) %>
        </label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= admin_request.message.presence || '-' %>
        </div>
      </div>
    </div>

    <% if admin_request.approved? || admin_request.rejected? %>
      <div class="col-md-6">
        <div class="mb-3 border-bottom py-3">
          <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
            <%= request_class.human_attribute_name(:approved_by_id) %>
          </label>
          <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
            <%= admin_request.approved_by&.name || '-' %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="mb-3 border-bottom py-3">
          <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
            <%= request_class.human_attribute_name(:approved_at) %>
          </label>
          <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
            <%= l(admin_request.approved_at, format: :long) if admin_request.approved_at %>
          </div>
        </div>
      </div>

      <% if admin_request.rejected? %>
        <div class="col-md-12">
          <div class="mb-3 py-3">
            <label class="form-label mb-0 text-muted" style="font-size: 1.0em;">
              <%= request_class.human_attribute_name(:rejection_reason) %>
            </label>
            <div class="pt-2">
              <div class="alert alert-danger mb-0">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <%= admin_request.rejection_reason %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <% if admin_request.can_be_approved? %>
    <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
      <%= button_to approve_company_admin_admin_request_path(admin_request, company_slug: params[:company_slug]), 
          method: :post, 
          class: 'btn btn-success',
          data: { confirm: t('admin.admin_requests.confirm.approve', name: admin_request.user.name) } do %>
        <i class="bi bi-check-circle me-1"></i>
        <%= t('admin.admin_requests.show.approve') %>
      <% end %>
      
      <%= link_to '#', 
          class: 'btn btn-danger',
          data: { bs_toggle: 'modal', bs_target: '#rejectModal' } do %>
        <i class="bi bi-x-circle me-1"></i>
        <%= t('admin.admin_requests.show.reject') %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- 却下モーダル -->
<% if admin_request.can_be_approved? %>
  <div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= form_with url: reject_company_admin_admin_request_path(admin_request, company_slug: params[:company_slug]), method: :post do |f| %>
          <div class="modal-header">
            <h5 class="modal-title">
              <i class="bi bi-x-circle me-2"></i>
              <%= t('admin.admin_requests.show.reject') %>
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <%= label_tag 'admin_request[rejection_reason]', 
                  t('admin.admin_requests.show.rejection_reason_label'), 
                  class: 'form-label' %>
              <%= text_area_tag 'admin_request[rejection_reason]', 
                  nil, 
                  rows: 4, 
                  class: 'form-control', 
                  placeholder: t('admin.admin_requests.show.rejection_reason_placeholder'),
                  required: true %>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
              <%= t('common.cancel') %>
            </button>
            <%= f.submit t('admin.admin_requests.show.reject'), class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
