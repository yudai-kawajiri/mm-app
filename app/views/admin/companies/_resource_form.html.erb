<%# 会社用リソースフォーム %>
<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">
        <%= form_title %>
      </h2>
    </div>

    <div class="card-body">
      <%= render 'shared/forms/error_messages', resource: resource %>

      <%= form_with(
            model: [:admin, resource],
            local: true,
            class: "needs-validation",
            data: {
              controller: "form-validation form--submit",
              action: "submit->form-validation#validate submit->form--submit#disableSubmit",
              form__submit_target: "form"
            }
          ) do |f| %>
        <%= render 'form', f: f %>
        <%= render 'shared/actions/form_action_links', f: f, resource: resource, back_url: admin_companies_path, scope: :admin %>
      <% end %>
    </div>
  </div>
</div>
