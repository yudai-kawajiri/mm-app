<%= form_with model: [:admin, @store], local: true do |f| %>

  <div class="mb-3">
    <%= f.label :code, t('admin.stores.form.code'), class: 'form-label' %>
    <%= f.text_field :code, class: 'form-control', placeholder: t('admin.stores.form.code_placeholder') %>
  </div>

  <div class="mb-3">
    <%= f.label :name, t('admin.stores.form.name'), class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: t('admin.stores.form.name_placeholder') %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit @store.new_record? ? t('admin.stores.form.submit_create') : t('admin.stores.form.submit_update'), class: 'btn btn-primary' %>
    <%= link_to t('admin.stores.form.cancel'), scoped_path(:admin_stores_path), class: 'btn btn-secondary' %>
  </div>
<% end %>
