<%# システムログ一覧（PaperTrailバージョン履歴） %>
<%= content_for :title, t('admin.system_logs.index.title') %>

<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3"><%= t('admin.system_logs.index.title') %></h1>
  </div>

  <%# フィルタフォーム（枠なし） %>
  <%= form_with url: admin_system_logs_path, method: :get, local: true, class: 'row g-3 mb-4' do |f| %>
    <div class="col-md-3">
      <%= f.label :item_type, t('admin.system_logs.index.model'), class: 'form-label' %>
      <%= f.select :item_type, options_for_select(@model_types.map { |m| [t("activerecord.models.#{m.underscore}", default: m), m] }, params[:item_type]), { include_blank: t('helpers.prompt.select') }, class: 'form-select' %>
    </div>

    <div class="col-md-3">
      <%= f.label :whodunnit, t('admin.system_logs.index.user'), class: 'form-label' %>
      <%= f.select :whodunnit, options_for_select(@users.map { |u| [u.name, u.id.to_s] }, params[:whodunnit]), { include_blank: t('helpers.prompt.select') }, class: 'form-select' %>
    </div>

    <div class="col-md-2">
      <%= f.label :date_from, t('admin.system_logs.index.date_from'), class: 'form-label' %>
      <%= f.date_field :date_from, value: params[:date_from], class: 'form-control' %>
    </div>

    <div class="col-md-2">
      <%= f.label :date_to, t('admin.system_logs.index.date_to'), class: 'form-label' %>
      <%= f.date_field :date_to, value: params[:date_to], class: 'form-control' %>
    </div>

    <div class="col-md-2 d-flex align-items-end">
      <%= f.submit t('admin.system_logs.index.filter'), class: 'btn btn-primary w-100' %>
    </div>
  <% end %>

  <%# システムログテーブル %>
  <div class="card">
    <div class="card-body p-0">
      <%= render 'shared/components/system_logs_table', logs: @versions %>
    </div>

    <% if @versions.any? %>
      <div class="card-footer bg-white">
        <div class="d-flex justify-content-center">
          <%= paginate @versions %>
        </div>
      </div>
    <% end %>
  </div>
</div>
