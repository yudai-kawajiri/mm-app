<%= content_for(:title, t('admin.tenants.index.title')) %>

<div data-controller="resource-search">
  <%= render 'shared/layouts/header_with_actions',
    title: t('admin.tenants.index.title'),
    resource: nil,
    is_index_page: true,
    is_form_page: false,
    is_show_page: false,
    new_path: nil,
    new_button_text: nil,
    skip_store_check: true %>

  <%= render 'shared/forms/search_form',
      search_path: admin_tenants_path,
      search_placeholder: t('admin.tenants.index.search.placeholder'),
      sort_options: [
        ['subdomain', t('admin.tenants.index.sort_options.subdomain')],
        ['created_at', t('admin.tenants.index.sort_options.created_at')]
      ],
      sort_placeholder: t('admin.tenants.index.sort_placeholder'),
      category_options: nil,
      hide_category: true %>

  <%= render 'shared/components/resource_list',
      resources: @tenants,
      resource_class: Tenant,
      search_target: nil,
      sort_options: nil,
      sort_placeholder: nil,
      icon_mode: true,
      show_copy: false,
      show_print: false,
      scope: [:admin],

      columns: [
        { header: :name, data: Proc.new { |tenant| tenant.name } },
        { header: :subdomain, data: Proc.new { |tenant| tenant.subdomain } },
        { header: :created_at, data: Proc.new { |tenant| l(tenant.created_at.to_date, format: :default) } }
      ]
  %>

  <%= paginate @tenants, theme: 'bootstrap-5' %>
</div>
