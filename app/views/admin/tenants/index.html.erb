<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><%= t('admin.tenants.index.title') %></h1>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <!-- 検索フォーム -->
      <%= form_with url: admin_tenants_path, method: :get, class: "mb-4", data: { controller: "resource-search", turbo_frame: "tenants_list" } do |f| %>
        <div class="row g-3">
          <div class="col-md-3">
            <label class="form-label"><%= t('admin.tenants.index.sort_options.created_at') %></label>
            <%= f.select :sort_by, 
                options_for_select([
                  [t('admin.tenants.index.sort_placeholder'), ''],
                  [t('admin.tenants.index.sort_options.subdomain'), 'subdomain'],
                  [t('admin.tenants.index.sort_options.created_at'), 'created_at']
                ], params[:sort_by]),
                {}, 
                class: "form-select",
                onchange: "this.form.requestSubmit()" %>
          </div>
          <div class="col-md-6">
            <label class="form-label"><%= t('admin.tenants.index.search.label') %></label>
            <%= f.text_field :q, 
                value: params[:q],
                class: "form-control",
                placeholder: t('admin.tenants.index.search.placeholder'),
                data: { 
                  resource_search_target: "input",
                  action: "input->resource-search#filter"
                } %>
          </div>
        </div>
      <% end %>

      <!-- テナント一覧 -->
      <%= render 'shared/components/resource_list',
        resources: @tenants,
        resource_name: 'tenant',
        columns: [
          { key: :name, label: Tenant.human_attribute_name(:name) },
          { key: :subdomain, label: Tenant.human_attribute_name(:subdomain) },
          { key: :created_at, label: Tenant.human_attribute_name(:created_at), format: ->(tenant) { l(tenant.created_at.to_date) } }
        ],
        search_name_proc: ->(tenant) { "#{tenant.name} #{tenant.subdomain}" },
        actions: ->(tenant) {
          link_to '詳細', admin_tenant_path(tenant), class: 'btn btn-sm btn-outline-primary'
        } %>
    </div>
  </div>
</div>
