<%= content_for :page_title, 'ユーザー管理' %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <i class="bi bi-people"></i> ユーザー管理
  </h1>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>権限</th>
          <th>登録日</th>
          <th style="width: 100px;">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.admin? %>
                <span class="badge bg-danger">管理者</span>
              <% else %>
                <span class="badge bg-secondary">スタッフ</span>
              <% end %>
            </td>
            <td><%= user.created_at.strftime('%Y年%m月%d日') %></td>
            <td>
              <% if user != current_user %>
                <%= button_to '削除', admin_user_path(user),
                    method: :delete,
                    data: { confirm: "#{user.name}のアカウントを削除してもよろしいですか？\nこの操作は取り消せません。" },
                    class: 'btn btn-danger btn-sm' %>
              <% else %>
                <span class="text-muted small">（自分）</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @users.empty? %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
        <p class="mt-3">ユーザーが登録されていません</p>
      </div>
    <% end %>
  </div>
</div>
