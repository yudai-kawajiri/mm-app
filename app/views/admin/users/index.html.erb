<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><%= t('admin.users.index.title') %></h1>
    <%= link_to t('admin.users.index.actions.invite'), new_admin_user_path, class: 'btn btn-primary' %>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <!-- 検索フォーム -->
      <%= form_with url: admin_users_path, method: :get, class: "mb-4", data: { controller: "resource-search", turbo_frame: "users_list" } do |f| %>
        <div class="row g-3">
          <div class="col-md-3">
            <label class="form-label"><%= t('admin.users.index.sort_placeholder') %></label>
            <%= f.select :sort_by, 
                options_for_select([
                  [t('admin.users.index.sort_placeholder'), ''],
                  [t('admin.users.index.sort_options.email'), 'email'],
                  [t('admin.users.index.sort_options.created_at'), 'created_at']
                ], params[:sort_by]),
                {}, 
                class: "form-select",
                onchange: "this.form.requestSubmit()" %>
          </div>
          <div class="col-md-6">
            <label class="form-label"><%= t('admin.users.index.search.label') %></label>
            <%= f.text_field :q, 
                value: params[:q],
                class: "form-control",
                placeholder: t('admin.users.index.search.placeholder'),
                data: { 
                  resource_search_target: "input",
                  action: "input->resource-search#filter"
                } %>
          </div>
        </div>
      <% end %>

      <!-- ユーザー一覧 -->
      <%= render 'shared/components/resource_list',
        resources: @users,
        resource_name: 'user',
        columns: [
          { key: :name, label: User.human_attribute_name(:name) },
          { key: :email, label: User.human_attribute_name(:email) },
          { key: :role, label: User.human_attribute_name(:role), format: ->(user) {
            case
            when user.super_admin? then content_tag(:span, 'システム管理者', class: 'badge bg-danger')
            when user.company_admin? then content_tag(:span, '会社管理者', class: 'badge bg-warning')
            when user.store_admin? then content_tag(:span, '店舗管理者', class: 'badge bg-info')
            else content_tag(:span, '一般', class: 'badge bg-secondary')
            end
          }},
          { key: :created_at, label: User.human_attribute_name(:created_at), format: ->(user) { l(user.created_at.to_date) } }
        ],
        search_name_proc: ->(user) { "#{user.name} #{user.email}" },
        actions: ->(user) {
          link_to '詳細', admin_user_path(user), class: 'btn btn-sm btn-outline-primary'
        } %>
    </div>
  </div>
</div>
