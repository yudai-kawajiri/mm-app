<%= content_for :title, t('admin.users.index.title') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <%= t('admin.users.index.title') %>
  </h1>
  <%= link_to t('admin.users.index.actions.invite'), new_admin_user_path, class: 'btn btn-primary' %>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t('admin.users.index.table_headers.name') %></th>
          <th><%= t('admin.users.index.table_headers.email') %></th>
          <th><%= t('admin.users.index.table_headers.role') %></th>
          <th><%= t('admin.users.index.table_headers.store') %></th>
          <th><%= t('admin.users.index.table_headers.registered_date') %></th>
          <th style="width: 150px;"><%= t('admin.users.index.table_headers.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.super_admin? %>
                <span class="badge bg-danger"><%= t('admin.users.index.role_badges.super_admin') %></span>
              <% elsif user.company_admin? %>
                <span class="badge bg-warning"><%= t('admin.users.index.role_badges.company_admin') %></span>
              <% elsif user.store_admin? %>
                <span class="badge bg-info"><%= t('admin.users.index.role_badges.store_admin') %></span>
              <% else %>
                <span class="badge bg-secondary"><%= t('admin.users.index.role_badges.general') %></span>
              <% end %>
            </td>
            <td><%= user.store&.name || '-' %></td>
            <td><%= user.created_at.strftime('%Y年%m月%d日') %></td>
            <td>
              <div class="d-flex gap-2">
                <% if user != current_user %>
                  <%= link_to t('admin.users.index.actions.edit'), edit_admin_user_path(user), class: 'btn btn-sm btn-outline-primary' %>
                  <%= button_to t('admin.users.index.actions.delete'), admin_user_path(user),
                    method: :delete,
                    form: { data: { turbo_method: :delete, turbo_confirm: t('admin.users.index.confirm.delete', name: user.name) } },
                    class: 'btn btn-danger btn-sm' %>
                <% else %>
                  <span class="text-muted small"><%= t('admin.users.index.actions.self') %></span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @users.empty? %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
        <p class="mt-3"><%= t('admin.users.index.empty_message') %></p>
      </div>
    <% end %>
  </div>
</div>
