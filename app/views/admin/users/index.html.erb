<%= content_for :title, t('admin.users.index.title') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <%= t('admin.users.index.title') %>
  </h1>
</div>

<div class="card">
  <div class="card-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t('admin.users.index.table_headers.name') %></th>
          <th><%= t('admin.users.index.table_headers.email') %></th>
          <th><%= t('admin.users.index.table_headers.role') %></th>
          <th><%= t('admin.users.index.table_headers.registered_date') %></th>
          <th style="width: 100px;"><%= t('admin.users.index.table_headers.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.admin? %>
                <span class="badge bg-danger"><%= t('admin.users.index.role_badges.admin') %></span>
              <% else %>
                <span class="badge bg-secondary"><%= t('admin.users.index.role_badges.staff') %></span>
              <% end %>
            </td>
            <td><%= user.created_at.strftime('%Y年%m月%d日') %></td>
            <td>
              <% if user != current_user %>
                <%= button_to t('admin.users.index.actions.delete'), admin_user_path(user),
                    method: :delete,
                    data: { confirm: t('admin.users.index.confirm.delete', name: user.name) },
                    class: 'btn btn-danger btn-sm' %>
              <% else %>
                <span class="text-muted small"><%= t('admin.users.index.actions.self') %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @users.empty? %>
      <div class="text-center text-muted py-5">
        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
        <p class="mt-3"><%= t('admin.users.index.empty_message') %></p>
      </div>
    <% end %>
  </div>
</div>