
<% if flash[:generated_password].present? %>
  <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
    <h5 class="alert-heading">
      <i class="bi bi-key-fill me-2"></i>
      <%= t('admin.users.show.generated_password.title') %>
    </h5>
    <p class="mb-2"><%= t('admin.users.show.generated_password.note') %></p>
    <div class="bg-light p-3 rounded">
      <code class="fs-5 text-danger"><%= flash[:generated_password] %></code>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<%= render 'shared/details/resource_show',
  resource: @user,
  title: t('admin.users.show.title'),
  content_left_partial: 'admin/users/details',
  content_left_title: nil,
  partial_locals: { user: @user },
  scope: :admin,
  show_edit_button: true,
  show_delete_button: true %>
