<% content_for :title, 'アプリケーション責任者依頼' %>
<%= render layout: 'devise/shared/auth_card_frame' do %>

  <h2 class="text-center mb-4">アプリケーション責任者依頼</h2>

  <%= form_with model: @application_request, url: application_requests_path, html: { data: { controller: 'form-validation' } } do |f| %>
    <%= render "devise/shared/error_messages", resource: @application_request %>

    <div class="mb-4 pb-3 border-bottom">
      <h5 class="text-muted mb-3">
        <i class="bi bi-building me-2"></i>会社情報
      </h5>

      <div class="mb-4">
        <%= f.label :company_name, class: "form-label h5" do %>
          会社名<%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.text_field :company_name, autofocus: true, class: "form-control form-control-lg", placeholder: "株式会社サンプル", required: true, data: { 'form-validation-target': 'field' } %>
      </div>

      <div class="mb-4">
        <%= f.label :company_email, class: "form-label h5" do %>
          会社メールアドレス<%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.email_field :company_email, class: "form-control form-control-lg", placeholder: "info@example.com", required: true, data: { 'form-validation-target': 'field' } %>
      </div>

      <div class="mb-4">
        <%= f.label :company_phone, class: "form-label h5" do %>
          電話番号
        <% end %>
        <%= f.text_field :company_phone, class: "form-control form-control-lg", placeholder: "03-1234-5678", data: { 'form-validation-target': 'field' } %>
        <small class="form-text text-muted">任意項目です</small>
      </div>
    </div>

    <div class="mb-4">
      <h5 class="text-muted mb-3">
        <i class="bi bi-person-badge me-2"></i>責任者情報
      </h5>

      <div class="mb-4">
        <%= f.label :admin_name, class: "form-label h5" do %>
          責任者氏名<%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.text_field :admin_name, class: "form-control form-control-lg", placeholder: "山田太郎", required: true, data: { 'form-validation-target': 'field' } %>
      </div>

      <div class="mb-4">
        <%= f.label :admin_email, class: "form-label h5" do %>
          責任者メールアドレス<%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.email_field :admin_email, class: "form-control form-control-lg", placeholder: "admin@example.com", required: true, data: { 'form-validation-target': 'field' } %>
        <small class="form-text text-muted">
          招待URLがこのメールアドレスに送信されます
        </small>
      </div>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit "招待メールを送信", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>

  <div class="text-end mt-4">
    <%= link_to root_path, class: "btn btn-outline-secondary btn-sm" do %>
      <i class="bi bi-arrow-left"></i>
      <%= t('landing.back_to_top') %>
    <% end %>
  </div>

<% end %>
