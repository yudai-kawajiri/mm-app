<% content_for :title, t('application_requests.new.title') %>

<%= render layout: 'devise/shared/auth_card_frame' do %>
  <h2 class="text-center mb-4"><%= t('application_requests.new.heading') %></h2>

  <%= form_with model: @application_request, url: application_requests_path,
                html: { data: { controller: 'form-validation' } },
                data: { turbo: false } do |f| %>

    <%= render 'devise/shared/error_messages', resource: @application_request %>

    <div class="mb-4 pb-3 border-bottom">
      <h5 class="text-muted mb-3"><%= t('application_requests.new.company_info') %></h5>

      <div class="mb-4">
        <%= f.label :company_name, class: "form-label h5" do %>
          <%= t('application_requests.new.company_name') %><%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.text_field :company_name, class: "form-control form-control-lg", placeholder: t('application_requests.new.company_name_placeholder'), required: true, data: { 'form-validation-target': 'field' } %>
      </div>

      <div class="mb-4">
        <%= f.label :company_email, class: "form-label h5" do %>
          <%= t('application_requests.new.company_email') %><%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.email_field :company_email, class: "form-control form-control-lg", placeholder: t('application_requests.new.company_email_placeholder'), required: true, data: { 'form-validation-target': 'field' } %>
      </div>

      <div class="mb-4">
        <%= f.label :company_phone, class: "form-label h5" do %>
          <%= t('application_requests.new.company_phone') %>
        <% end %>
        <%= f.telephone_field :company_phone, class: "form-control form-control-lg", placeholder: t('application_requests.new.company_phone_placeholder'), data: { 'form-validation-target': 'field' } %>
        <small class="form-text text-muted"><%= t('application_requests.new.optional_field') %></small>
      </div>
    </div>

    <div class="mb-4">
      <h5 class="text-muted mb-3"><%= t('application_requests.new.admin_info') %></h5>

      <div class="mb-4">
        <%= f.label :admin_name, class: "form-label h5" do %>
          <%= t('application_requests.new.admin_name') %><%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.text_field :admin_name, class: "form-control form-control-lg", placeholder: t('application_requests.new.admin_name_placeholder'), required: true, data: { 'form-validation-target': 'field' } %>
      </div>

      <div class="mb-4">
        <%= f.label :admin_email, class: "form-label h5" do %>
          <%= t('application_requests.new.admin_email') %><%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.email_field :admin_email, class: "form-control form-control-lg", placeholder: t('application_requests.new.admin_email_placeholder'), required: true, data: { 'form-validation-target': 'field' } %>
        <small class="form-text text-muted"><%= t('application_requests.new.admin_email_hint') %></small>
      </div>

            <div class="mb-4">
        <%= f.label :password, class: "form-label h5" do %>
          <%= t('application_requests.new.password_label') %><%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.password_field :password, class: "form-control form-control-lg", placeholder: t('application_requests.new.password_placeholder'), required: true, minlength: 6, data: { 'form-validation-target': 'field' } %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "form-label h5" do %>
          <%= t('application_requests.new.password_confirmation_label') %><%= raw(t('helpers.required_mark')) %>
        <% end %>
        <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: t('application_requests.new.password_placeholder'), required: true, minlength: 6, data: { 'form-validation-target': 'field' } %>
      </div>
    </div>

    <%= render 'shared/terms_privacy_agreement' %>

    <div class="d-grid gap-2">
      <%= f.submit t('application_requests.new.submit'), class: "btn btn-success btn-lg" %>
    </div>
  <% end %>

  <%= render "devise/shared/back_to_landing" %>

<% end %>
