<% category = local_assigns[:category] %>
<% category_class = category.class %>
<% no_setting = t('helpers.no_setting') %>

<div class="pt-1">
  <div class="row">
    <%# 項目1: カテゴリ名 (左カラム) %>
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= category_class.human_attribute_name(:name) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= category.name %>
        </div>
      </div>
    </div>

    <%# 項目2: カテゴリ種別 (右カラム) %>
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= category_class.human_attribute_name(:category_type) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= I18n.t("activerecord.enums.category.category_type.#{category.category_type}") %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# 説明欄 %>
<div class="mt-4">
  <h6 class="text-muted" style="font-size: 1.1em;"><%= category_class.human_attribute_name(:description) %></h6>
  <div class="p-3 border rounded d-flex align-items-center justify-content-center" style="min-height: 210px;">
    <%= render 'shared/components/description_content', content: category.description %>
  </div>
</div>