<%= render 'shared/resource_list',
    title: t('.title'),
    new_path: new_category_path,
    new_resource_name: Category.model_name.human do %>

  <%# 共有パーシャルを呼び出し、ローカル変数として categories_path を渡す %>
  <%= render 'shared/search_form', form_path: categories_path, search_target: :category_type  %>

  <%# ローカル変数 categories に @categories の値を渡す %>
  <%= render 'category_table', categories: @categories %>
<% end %>

<%# ページネーション設定 %>
<%= paginate @categories, theme: 'bootstrap-5' %>
