<%= content_for :title, t('dashboard.admin.title') %>

<div class="container-fluid py-4">
  <!-- ページヘッダー -->
  <div class="d-flex align-items-center mb-4">
    <i class="fas fa-user-shield fs-2 text-primary me-3"></i>
    <h1 class="h3 mb-0"><%= t('dashboard.admin.title') %></h1>
  </div>

  <div class="row g-4 mb-4">
    <!-- 承認待ちユーザー -->
    <div class="col-md-6">
      <div class="card text-white h-100 shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <i class="bi bi-person-check fs-4 me-2"></i>
            <h5 class="card-title mb-0"><%= t('dashboard.admin.pending_users') %></h5>
          </div>
          <p class="display-4 mb-3 fw-bold"><%= @pending_users_count %></p>
          <%= link_to t('dashboard.admin.view_users'), scoped_path(:admin_admin_requests_path), class: 'btn btn-light btn-sm' %>
        </div>
      </div>
    </div>

    <!-- 登録会社数 -->
    <div class="col-md-6">
      <div class="card text-white h-100 shadow-sm" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
        <div class="card-body">
          <div class="d-flex align-items-center mb-3">
            <i class="bi bi-building fs-4 me-2"></i>
            <h5 class="card-title mb-0"><%= t('dashboard.admin.total_companies') %></h5>
          </div>
          <p class="display-4 mb-3 fw-bold"><%= @companies_count %></p>
          <%= link_to t('dashboard.admin.view_companies'), admin_companies_path, class: 'btn btn-light btn-sm' %>
        </div>
      </div>
    </div>
  </div>

  <!-- 最近のシステムログ -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i><%= t('dashboard.admin.recent_logs') %></h5>
        </div>
        <div class="card-body p-0">
          <%= render 'shared/components/system_logs_table', logs: @recent_logs, show_detail: false %>
        </div>
      </div>
    </div>
  </div>
</div>
