<%= content_for :title, t('dashboard.admin.title') %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h3 mb-0">
    <i class="bi bi-speedometer2"></i>
    <%= t('dashboard.admin.title') %>
  </h1>
</div>

<!-- サマリーカード -->
<div class="row mb-4">
  <!-- 承認待ちユーザー -->
  <div class="col-md-4">
    <div class="card <%= @pending_users_count > 0 ? 'bg-warning text-white' : 'border-warning' %>">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-1">
              <i class="bi bi-person-check"></i>
              <%= t('dashboard.admin.pending_users') %>
            </h6>
            <h2 class="mb-0"><%= @pending_users_count %></h2>
          </div>
          <i class="bi bi-person-check" style="font-size: 3rem; opacity: 0.3;"></i>
        </div>
        <div class="mt-3">
          <%= link_to admin_users_path, class: 'btn btn-sm btn-light' do %>
            <%= t('dashboard.admin.view_users') %> <i class="bi bi-arrow-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- テナント数 -->
  <div class="col-md-4">
    <div class="card bg-primary text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-1">
              <i class="bi bi-building"></i>
              <%= t('dashboard.admin.total_tenants') %>
            </h6>
            <h2 class="mb-0"><%= @tenants_count %></h2>
          </div>
          <i class="bi bi-building" style="font-size: 3rem; opacity: 0.3;"></i>
        </div>
        <div class="mt-3">
          <%= link_to admin_tenants_path, class: 'btn btn-sm btn-light' do %>
            <%= t('dashboard.admin.view_tenants') %> <i class="bi bi-arrow-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- 店舗数 -->
  <div class="col-md-4">
    <div class="card bg-success text-white">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-1">
              <i class="bi bi-shop"></i>
              <%= t('dashboard.admin.total_stores') %>
            </h6>
            <h2 class="mb-0"><%= @stores_count %></h2>
          </div>
          <i class="bi bi-shop" style="font-size: 3rem; opacity: 0.3;"></i>
        </div>
        <div class="mt-3">
          <%= link_to admin_stores_path, class: 'btn btn-sm btn-light' do %>
            <%= t('dashboard.admin.view_stores') %> <i class="bi bi-arrow-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- 最近のシステムログ -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="bi bi-file-text"></i>
      <%= t('dashboard.admin.recent_logs') %>
    </h5>
  </div>
  <div class="card-body">
    <% if @recent_logs.any? %>
      <div class="table-responsive">
        <table class="table table-hover mb-3">
          <thead>
            <tr>
              <th><%= t('activerecord.attributes.system_log.created_at') %></th>
              <th><%= t('activerecord.attributes.system_log.action') %></th>
              <th><%= t('activerecord.attributes.system_log.user') %></th>
              <th><%= t('activerecord.attributes.system_log.details') %></th>
            </tr>
          </thead>
          <tbody>
            <% @recent_logs.each do |log| %>
              <tr>
                <td><%= l(log.created_at, format: :short) %></td>
                <td><span class="badge bg-info"><%= log.action %></span></td>
                <td><%= log.user&.name || t('common.system') %></td>
                <td><%= truncate(log.details, length: 50) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= link_to admin_system_logs_path, class: 'btn btn-outline-primary' do %>
        <i class="bi bi-list-ul"></i>
        <%= t('dashboard.admin.view_all_logs') %>
      <% end %>
    <% else %>
      <p class="text-muted mb-0">
        <i class="bi bi-info-circle"></i>
        <%= t('dashboard.admin.no_logs') %>
      </p>
    <% end %>
  </div>
</div>
