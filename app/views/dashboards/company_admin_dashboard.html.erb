<%= content_for :title, t('dashboard.company_admin.title') %>

<div class="container-fluid py-4">
  <!-- ページヘッダー -->
  <div class="d-flex align-items-center mb-4">
    <i class="fas fa-building fs-2 text-primary me-3"></i>
    <h1 class="h3 mb-0"><%= t('dashboard.company_admin.title') %></h1>
  </div>

  <!-- サマリーカード -->
  <div class="row g-3 mb-4">
    <!-- 承認待ちユーザー -->
    <div class="col-md-6">
      <div class="card h-100 shadow-sm border-0" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="card-body text-white">
          <div class="d-flex align-items-center mb-3">
            <i class="fas fa-user-clock fs-4 me-2"></i>
            <h5 class="card-title mb-0"><%= t('dashboard.company_admin.pending_users') %></h5>
          </div>
          <p class="display-4 mb-3 fw-bold"><%= @pending_users_count %></p>
          <%= link_to t('dashboard.company_admin.view_users'), admin_users_path, class: 'btn btn-light btn-sm' %>
        </div>
      </div>
    </div>

    <!-- 店舗数 -->
    <div class="col-md-6">
      <div class="card h-100 shadow-sm border-0" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
        <div class="card-body text-white">
          <div class="d-flex align-items-center mb-3">
            <i class="fas fa-store fs-4 me-2"></i>
            <h5 class="card-title mb-0"><%= t('dashboard.company_admin.total_stores') %></h5>
          </div>
          <p class="display-4 mb-3 fw-bold"><%= @stores_count %></p>
          <%= link_to t('dashboard.company_admin.view_stores'), admin_stores_path, class: 'btn btn-light btn-sm' %>
        </div>
      </div>
    </div>
  </div>

  <!-- 最近のアクティビティ -->
  <div class="card shadow-sm">
    <div class="card-header bg-white">
      <h5 class="mb-0">
        <i class="fas fa-history me-2"></i>
        <%= t('dashboard.company_admin.recent_logs') %>
      </h5>
    </div>
    <div class="card-body">
      <% if @recent_logs.present? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th><%= t('activerecord.attributes.system_log.created_at') %></th>
                <th><%= t('common.action') %></th>
                <th><%= t('dashboard.company_admin.logs.target') %></th>
                <th><%= t('activerecord.attributes.system_log.user') %></th>
              </tr>
            </thead>
            <tbody>
              <% @recent_logs.each do |log| %>
                <tr>
                  <td class="text-nowrap">
                    <small><%= log.created_at.strftime('%Y/%m/%d %H:%M') %></small>
                  </td>
                  <td>
                    <% case log.event %>
                    <% when 'create' %>
                      <span class="badge bg-success"><%= t('common.create') %></span>
                    <% when 'update' %>
                      <span class="badge bg-primary"><%= t('common.update') %></span>
                    <% when 'destroy' %>
                      <span class="badge bg-danger"><%= t('common.destroy') %></span>
                    <% else %>
                      <span class="badge bg-secondary"><%= log.event %></span>
                    <% end %>
                  </td>
                  <td>
                    <%= t("activerecord.models.#{log.item_type.underscore}", default: log.item_type) %>
                  </td>
                  <td>
                    <% user = User.find_by(id: log.whodunnit) %>
                    <%= user&.name || t('common.system') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center text-muted py-5">
          <i class="fas fa-inbox fs-1 mb-3 d-block"></i>
          <p><%= t('dashboard.company_admin.no_logs') %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
