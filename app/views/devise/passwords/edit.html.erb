<%# app/views/devise/passwords/edit.html.erb %>
<%= render "devise/shared/auth_card_frame" do %>
  <div class="mb-4 text-center">
    <h3 class="fw-bold text-primary mb-2">
      <i class="bi bi-lock-fill me-2"></i><%= t('devise.passwords.edit.title') %>
    </h3>
    <p class="text-muted mb-0"><%= t('devise.passwords.edit.description') %></p>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'needs-validation', novalidate: true }) do |f| %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-3">
      <%= f.label :password, class: 'form-label fw-bold' do %>
        <i class="bi bi-lock me-1"></i><%= t('devise.passwords.edit.new_password') %>
      <% end %>
      <%= f.password_field :password,
          autofocus: true,
          autocomplete: "new-password",
          class: 'form-control form-control-lg',
          placeholder: '••••••••',
          required: true %>
      <% if @minimum_password_length %>
        <div class="form-text">
          <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
        </div>
      <% end %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: 'form-label fw-bold' do %>
        <i class="bi bi-lock-fill me-1"></i><%= t('devise.passwords.edit.new_password_confirmation') %>
      <% end %>
      <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: 'form-control form-control-lg',
          placeholder: '••••••••',
          required: true %>
    </div>

    <div class="d-grid gap-2 mb-3">
      <%= f.submit t('devise.passwords.edit.submit'), class: 'btn btn-primary btn-lg' %>
    </div>

    <%# ログイン画面へのリンク %>
    <div class="text-center">
      <%= link_to new_session_path(resource_name), class: 'text-decoration-none' do %>
        <i class="bi bi-arrow-left me-1"></i><%= t('devise.shared.links.sign_in') %>
      <% end %>
    </div>
  <% end %>
<% end %>