<%# app/views/devise/registrations/new.html.erb %>
<% content_for :page_title, t('devise.registrations.new.title') %>
<%= render layout: 'devise/shared/auth_card_frame' do %>

  <%= render "devise/shared/tabs" %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, class: "form-label h5" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "form-label h5" %><br />
      <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "form-label h5" %>
      <% if @minimum_password_length %>
        <small class="text-muted d-block">
          <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
        </small>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "form-label h5" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
    </div>

    <div class="d-grid gap-2">
      <%= f.submit t('helpers.submit.create'), class: "btn btn-success btn-lg" %>
    </div>
  <% end %>

<% end %>