<%# app/views/devise/sessions/new.html.erb %>
<% content_for :title, t('devise.sessions.new.title') %>
<%= render layout: 'devise/shared/auth_card_frame' do %>

  <%= render "devise/shared/tabs" %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-4">
      <%= f.label :email, class: "form-label h5" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "form-label h5" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-4">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="d-grid gap-2">
      <%= f.submit t("devise.sessions.new.submit"), class: "btn btn-primary btn-lg" %>
    </div>

    <%# パスワードを忘れた方へのリンク %>
    <div class="text-center mt-3">
      <%= link_to t("devise.shared.links.forgot_your_password"), new_password_path(resource_name), class: "text-decoration-none" %>
    </div>
  <% end %>

<% end %>