
<% content_for :page_title, t('devise.sessions.new.title') %>
<%= render layout: 'devise/shared/auth_card_frame' do %>

  <%= render "devise/shared/tabs" %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check mb-3">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>
    <% end %>

    <div class="d-grid gap-2">
      <%= f.submit t("devise.sessions.new.submit"), class: "btn btn-primary" %>
    </div>
  <% end %>
<% end %>

