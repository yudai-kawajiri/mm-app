<%# 認証画面タブナビゲーション %>
<ul class="nav nav-tabs mb-4" role="tablist">
  <li class="nav-item" role="presentation">
    <%= link_to new_session_path(resource_name),
          class: "nav-link #{'active' if current_page?(new_session_path(resource_name))}",
          role: "tab" do %>
      <i class="bi bi-box-arrow-in-right me-2"></i>
      <%= t('devise.sessions.new.title') %>
    <% end %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to new_registration_path(resource_name),
          class: "nav-link #{'active' if current_page?(new_registration_path(resource_name))}",
          role: "tab" do %>
      <i class="bi bi-person-plus me-2"></i>
      <%= t('devise.registrations.new.title') %>
    <% end %>
  </li>
</ul>
