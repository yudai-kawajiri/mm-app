<%# app/views/devise/unlocks/new.html.erb %>
<% content_for :title, t('devise.unlocks.new.title') %>
<%= render "devise/shared/auth_card_frame" do %>
  <div class="mb-4 text-center">
    <h3 class="fw-bold text-primary mb-2">
      <i class="bi bi-unlock me-2"></i><%= t('devise.unlocks.title') %>
    </h3>
    <p class="text-muted mb-0"><%= t('devise.unlocks.subtitle') %></p>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: 'form-label fw-bold' do %>
        <i class="bi bi-envelope me-1"></i><%= t('devise.unlocks.email') %>
      <% end %>
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: 'form-control form-control-lg',
          placeholder: 'example@sushi-manage.com',
          required: true %>
      <div class="form-text">
        <%= t('devise.unlocks.email_hint') %>
      </div>
    </div>

    <div class="d-grid gap-2 mb-3">
      <%= f.submit t('devise.unlocks.submit'), class: 'btn btn-primary btn-lg' %>
    </div>

    <%# ログイン画面へのリンク %>
    <div class="text-center">
      <%= link_to new_session_path(resource_name), class: 'text-decoration-none' do %>
        <i class="bi bi-arrow-left me-1"></i><%= t('devise.unlocks.back_to_login') %>
      <% end %>
    </div>
  <% end %>
<% end %>