<%# アカウントロック解除メール送信 %>
<% content_for :title, t('devise.unlocks.new.title') %>

<%= render "devise/shared/auth_card_frame" do %>
  <div class="mb-4 text-center">
    <h3 class="fw-bold text-primary mb-2">
      <i class="bi bi-unlock me-2"></i><%= t('devise.unlocks.new.title') %>
    </h3>
    <p class="text-muted mb-0"><%= t('devise.unlocks.new.description') %></p>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: company_user_unlock_path(company_slug: params[:company_slug]), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: 'form-label fw-bold' do %>
        <i class="bi bi-envelope me-1"></i><%= t('devise.unlocks.new.email') %>
      <% end %>
      <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: 'form-control form-control-lg',
          placeholder: t('devise.unlocks.new.email_placeholder'),
          required: true %>
      <div class="form-text">
        <%= t('devise.unlocks.new.email_hint') %>
      </div>
    </div>

    <div class="d-grid gap-2 mb-3">
      <%= f.submit t('devise.unlocks.new.submit'), class: 'btn btn-primary btn-lg' %>
    </div>

    <div class="text-center">
      <%= link_to company_new_user_session_path(company_slug: params[:company_slug]), class: 'text-decoration-none' do %>
        <i class="bi bi-arrow-left me-1"></i><%= t('devise.unlocks.new.back_to_login') %>
      <% end %>
    </div>
  <% end %>
<% end %>
