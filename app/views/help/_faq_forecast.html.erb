<div class="accordion-item" data-faq-item data-keywords="<%= t('help.faq_keywords.forecast') %>" data-help-search-target="faqItem">
  <h2 class="accordion-header">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqForecast" aria-expanded="false" aria-controls="faqForecast">
      <%= t('help.faq.forecast.title') %>
    </button>
  </h2>
  <div id="faqForecast" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
    <div class="accordion-body">
      <p><%= t('help.faq.forecast.description') %></p>

      <h6><%= t('help.faq.forecast.formula1_title') %></h6>
      <pre class="bg-light p-2"><code><%= t('help.faq.forecast.formula1_code') %></code></pre>
      <p><strong><%= t('help.faq.forecast.example_label') %></strong> <%= t('help.faq.forecast.formula1_example') %></p>
      <p class="small"><%= t('help.faq.forecast.formula1_note') %></p>

      <h6 class="mt-3"><%= t('help.faq.forecast.formula2_title') %></h6>
      <pre class="bg-light p-2"><code><%= t('help.faq.forecast.formula2_code') %></code></pre>
      <p><strong><%= t('help.faq.forecast.example_label') %></strong> <%= t('help.faq.forecast.formula2_example') %></p>
      <p class="small"><%= t('help.faq.forecast.formula2_note') %></p>

      <p class="text-muted small mt-3"><%= t('help.faq.forecast.final_note') %></p>
    </div>
  </div>
</div>