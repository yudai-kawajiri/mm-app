<div class="accordion-item" data-faq-item data-keywords="<%= t('help.faq_keywords.markdown_rate') %>" data-help-search-target="faqItem">
  <h2 class="accordion-header">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqMarkdownRate" aria-expanded="false" aria-controls="faqMarkdownRate">
      <%= t('help.faq.markdown_rate.title') %>
    </button>
  </h2>
  <div id="faqMarkdownRate" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
    <div class="accordion-body">
      <p><%= t('help.faq.markdown_rate.description') %></p>

      <h6><%= t('help.faq.markdown_rate.table.title') %></h6>
      <table class="table table-sm table-bordered">
        <thead class="table-light">
          <tr>
            <th><%= t('help.faq.markdown_rate.table.header.item') %></th>
            <th><%= t('help.faq.markdown_rate.table.header.description') %></th>
            <th><%= t('help.faq.markdown_rate.table.header.usage') %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= t('help.faq.markdown_rate.table.row1.item') %></td>
            <td><%= t('help.faq.markdown_rate.table.row1.description') %></td>
            <td><%= t('help.faq.markdown_rate.table.row1.usage') %></td>
          </tr>
          <tr>
            <td><%= t('help.faq.markdown_rate.table.row2.item') %></td>
            <td><%= t('help.faq.markdown_rate.table.row2.description') %></td>
            <td><%= t('help.faq.markdown_rate.table.row2.usage') %></td>
          </tr>
        </tbody>
      </table>

      <h6 class="mt-3"><%= t('help.faq.markdown_rate.formula1_title') %></h6>
      <pre class="bg-light p-2"><code><%= t('help.faq.markdown_rate.formula1_code') %></code></pre>
      <p><strong><%= t('help.faq.markdown_rate.example_label') %></strong> <%= t('help.faq.markdown_rate.formula1_example') %></p>

      <h6 class="mt-3"><%= t('help.faq.markdown_rate.formula2_title') %></h6>
      <pre class="bg-light p-2"><code><%= t('help.faq.markdown_rate.formula2_code') %></code></pre>
      <p><strong><%= t('help.faq.markdown_rate.example_label') %></strong> <%= t('help.faq.markdown_rate.formula2_example') %></p>

      <p class="text-muted small mt-3"><%= t('help.faq.markdown_rate.final_note') %></p>
    </div>
  </div>
</div>