<div class="accordion-item" data-faq-item data-keywords="<%= t('help.faq_keywords.material') %>" data-help-search-target="faqItem">
  <h2 class="accordion-header">
    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faqMaterial" aria-expanded="false" aria-controls="faqMaterial">
      <%= t('help.faq.material.title') %>
    </button>
  </h2>
  <div id="faqMaterial" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
    <div class="accordion-body">
      <p><%= t('help.faq.material.description') %></p>
      <ul>
        <li><%= t('help.faq.material.field1') %></li>
        <li><%= t('help.faq.material.field2') %></li>
        <li><%= t('help.faq.material.field3') %></li>
        <li><%= t('help.faq.material.field4') %></li>
      </ul>
      <p class="text-muted small"><%= t('help.faq.material.note') %></p>
    </div>
  </div>
</div>