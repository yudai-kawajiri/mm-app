<% content_for :title, '使い方・ヘルプ' %>

<div class="container-fluid py-4" data-controller="help-search">
  <div class="row mb-4">
    <div class="col-12">
      <h1>使い方・ヘルプ</h1>
      <p class="text-muted">システムの使い方や、よくある質問を検索できます</p>
    </div>
  </div>

  <!-- 検索ボックス(左寄せ) -->
