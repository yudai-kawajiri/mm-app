    <div class="col-md-6">
      <div class="input-group">
        <span class="input-group-text"><i class="bi bi-search"></i></span>
        <input type="text"
                class="form-control"
                id="helpSearch"
                placeholder="キーワードから探す(例: 予算、材料、印刷)"
                data-help-search-target="input"
