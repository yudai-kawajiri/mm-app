<%#
  機能: ダッシュボード用2カラムレイアウト
  - サイドバーナビゲーション付きメインレイアウト
  - ログイン後の全画面で使用
  - サイドバー + メインコンテンツの構成
%>
<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? "#{yield(:title)} | #{t('application_name')}" : t('application_name') %></title>
    <%= csp_meta_tag %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <%= javascript_importmap_tags %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <%= yield :head %>
    <script src="<%= asset_path('utils/currency_formatter.js') %>"></script>
  </head>

  <body>
    <div class="container-fluid">
      <%= render 'shared/flash_messages' %>
    </div>

    <main class="container-fluid">
      <div class="row min-vh-100">
        <%= render 'dashboards/sidebar' %>

        <div class="col-md-9 p-4">
          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
