<%# 実績入力モーダル %>
<div class="modal fade" id="actualRevenueModal" tabindex="-1" aria-labelledby="actualRevenueModalLabel" aria-hidden="true">
  <div class=" modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="actualRevenueModalLabel"><%= t('numerical_managements.modals.actual_revenue_entry.title') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <form id="actualRevenueForm" action="#" method="post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag :_method, 'patch' %>

        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label"><%= t('numerical_managements.modals.labels.target_date') %></label>
            <input type="text" class="form-control-plaintext" id="actualRevenueDate" readonly value="">
          </div>

          <div class="mb-3">
            <label for="actualRevenueInput" class="form-label"><%= t('numerical_managements.modals.labels.actual_revenue_yen') %></label>
            <%= text_field_tag 'planning_plan_schedule[actual_revenue]', '',
              class: "form-control actual-revenue-input",
              required: true,
              id: "actualRevenueInput",
              inputmode: "numeric",
              autocomplete: "off",
              data: {
                controller: 'input--number-input',
                action: 'input->input--number-input#handleInput paste->input--number-input#handlePaste focus->input--number-input#handleFocus blur->input--number-input#handleBlur'
              } %>
          </div>

          <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> <%= t('numerical_managements.modals.actual_revenue_entry.info') %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common.cancel') %></button>
          <button type="submit" class="btn btn-primary"><%= t('common.save') %></button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
function setActualModalData(button) {
  const date = button.dataset.date;
  const planScheduleId = button.dataset.planScheduleId;
  const actualRevenue = button.dataset.actualRevenue;

  console.log('setActualModalData called:', { date, planScheduleId, actualRevenue });

  if (!planScheduleId) {
    console.error('data-plan-schedule-id attribute is missing');
    return;
  }

  // 日付を分解して表示用に整形
  const dateObj = new Date(date);
  const month = dateObj.getMonth() + 1;
  const day = dateObj.getDate();
  const displayDate = `${month}月${day}日`;

  // フォームのアクションURLを動的に設定
  const form = document.getElementById('actualRevenueForm');
  form.action = `/management/plan_schedules/${planScheduleId}/actual_revenue`;

  // モーダルのフィールドに値を設定
  document.getElementById('actualRevenueDate').value = displayDate;
  document.getElementById('actualRevenueInput').value = actualRevenue || '';

  console.log('Actual modal fields set:', {
    displayDate: document.getElementById('actualRevenueDate').value,
    actualRevenue: document.getElementById('actualRevenueInput').value,
    formAction: form.action
  });
}
</script>
