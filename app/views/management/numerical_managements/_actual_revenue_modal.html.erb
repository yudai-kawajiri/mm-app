<%# 実績入力モーダル %>
<div class="modal fade" id="actualRevenueModal" tabindex="-1" aria-labelledby="actualRevenueModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="actualRevenueModalLabel"><%= t('numerical_managements.modals.actual_revenue_entry.title') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with model: Planning::PlanSchedule.new,
                    url: actual_revenue_management_plan_schedule_path(0),
                    method: :patch,
                    local: true,
                    id: "actualRevenueForm" do |f| %>

        <div class="modal-body">
          <div class="mb-3">
            <label class="form-label"><%= t('numerical_managements.modals.labels.target_date') %></label>
            <input type="text" class="form-control-plaintext" id="actualRevenueDate" readonly>
          </div>

          <div class="mb-3">
            <%= f.label :actual_revenue, t('numerical_managements.modals.labels.actual_revenue_yen'), class: "form-label" %>
            <%= f.text_field :actual_revenue,
              class: "form-control",
              required: true,
              id: "actualRevenueInput",
              inputmode: "numeric",
              data: {
                controller: 'number-input',
                action: 'input->number-input#handleInput paste->number-input#handlePaste'
              } %>
          </div>

          <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> <%= t('numerical_managements.modals.actual_revenue_entry.info') %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common.cancel') %></button>
          <%= f.submit t('common.save'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
