<%# 日別予算編集モーダル %>
<div class="modal fade" id="editDailyTargetModal" tabindex="-1" aria-labelledby="editDailyTargetModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editDailyTargetModalLabel"><%= t('numerical_managements.modals.daily_target_edit.title') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with model: Management::DailyTarget.new,
                    url: update_daily_target_management_numerical_managements_path,
                    method: :patch,
                    local: true,
                    id: "editTargetForm" do |f| %>

        <div class="modal-body">
          <!-- Hidden fields for date parameters -->
          <%= hidden_field_tag :year, '', id: 'editTargetYear' %>
          <%= hidden_field_tag :month, '', id: 'editTargetMonth' %>
          <%= hidden_field_tag :date, '', id: 'editTargetDateValue' %>

          <div class="mb-3">
            <label class="form-label"><%= t('numerical_managements.modals.labels.target_date') %></label>
            <input type="text" class="form-control-plaintext" id="editTargetDate" readonly>
          </div>

          <div class="mb-3">
            <%= f.label :target_amount, t('numerical_managements.modals.labels.daily_target_yen'), class: "form-label" %>
            <%= f.text_field :target_amount,
              class: "form-control",
              required: true,
              id: "editTargetAmount",
              data: {
                controller: 'input--number-input',
                action: 'input->input--number-input#handleInput paste->input--number-input#handlePaste'
              } %>
          </div>

          <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> <%= t('numerical_managements.modals.daily_target_edit.info') %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common.cancel') %></button>
          <%= f.submit t('common.update'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
