<%# 日別予算編集モーダル %>
<div class="modal fade" id="editDailyTargetModal" tabindex="-1" aria-labelledby="editDailyTargetModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editDailyTargetModalLabel"><%= t('numerical_managements.modals.daily_target_edit.title') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <%= form_with url: update_daily_target_management_numerical_managements_path,
                    method: :patch,
                    local: true,
                    id: "editTargetForm" do |f| %>

        <div class="modal-body">
          <!-- Hidden fields for date parameters -->
          <%= hidden_field_tag 'management_daily_target[year]', '', id: 'editTargetYear' %>
          <%= hidden_field_tag 'management_daily_target[month]', '', id: 'editTargetMonth' %>
          <%= hidden_field_tag 'management_daily_target[target_date]', '', id: 'editTargetDateValue' %>

          <div class="mb-3">
            <label class="form-label"><%= t('numerical_managements.modals.labels.target_date') %></label>
            <input type="text" class="form-control-plaintext" id="editTargetDate" readonly value="">
          </div>

          <div class="mb-3">
            <label for="editTargetAmount" class="form-label"><%= t('numerical_managements.modals.labels.daily_target_yen') %></label>
            <%= text_field_tag 'management_daily_target[target_amount]', '',
              class: "form-control",
              required: true,
              id: "editTargetAmount",
              data: {
                controller: 'input--number-input',
                action: 'input->input--number-input#handleInput paste->input--number-input#handlePaste'
              } %>
          </div>

          <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> <%= t('numerical_managements.modals.daily_target_edit.info') %>
          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common.cancel') %></button>
          <%= submit_tag t('common.update'), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function setEditModalData(button) {
  const date = button.dataset.date;
  const targetAmount = button.dataset.targetAmount;

  console.log('setEditModalData called:', { date, targetAmount });

  if (!date) {
    console.error('data-date attribute is missing');
    return;
  }

  // 日付を分解
  const dateObj = new Date(date);
  const year = dateObj.getFullYear();
  const month = dateObj.getMonth() + 1;
  const day = dateObj.getDate();

  // 表示用の日付
  const displayDate = `${month}月${day}日`;

  // モーダルのフィールドに値を設定
  document.getElementById('editTargetYear').value = year;
  document.getElementById('editTargetMonth').value = month;
  document.getElementById('editTargetDateValue').value = date;
  document.getElementById('editTargetDate').value = displayDate;  // textContent → value に修正
  document.getElementById('editTargetAmount').value = targetAmount || '';

  console.log('Modal fields set:', {
    year: document.getElementById('editTargetYear').value,
    month: document.getElementById('editTargetMonth').value,
    date: document.getElementById('editTargetDateValue').value,
    displayDate: document.getElementById('editTargetDate').value,  // textContent → value に修正
    targetAmount: document.getElementById('editTargetAmount').value
  });
}
</script>
