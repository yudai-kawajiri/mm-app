<% material = local_assigns[:material] %>
<% material_class = material.class %>
<% no_setting = t('helpers.no_setting') %>

<div class="pt-1">
  <div class="row">

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:name) %></label>

        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.name %>
        </div>
      </div>
    </div>


    <div class="col-md-6">
      <% if material.category.present? %>
        <div class="mb-3 border-bottom py-3">
          <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:category) %></label>

          <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
            <%= material.category.name %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:unit_for_product) %></label>

        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.unit_for_product.name %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:unit_weight_for_product) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.unit_weight_for_product ? number_with_precision(material.unit_weight_for_product, precision: 1) : no_setting %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <%# 項目5: 発注単位 (左カラム) %>
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:unit_for_order) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.unit_for_order.name %>
        </div>
      </div>
    </div>

    <%# 項目6: 発注単位あたりの重量 (右カラム) %>
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:unit_weight_for_order) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.unit_weight_for_order ? number_with_precision(material.unit_weight_for_order, precision: 1) : no_setting %>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="mt-4">
  <h6 class="text-muted" style="font-size: 1.1em;"><%= material_class.human_attribute_name(:description) %></h6>

    <div class="p-3 border rounded d-flex align-items-center justify-content-center" style="min-height: 210px;">
        <%= render 'shared/components/description_content', content: material.description %>
    </div>
</div>