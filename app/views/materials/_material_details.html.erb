<% material = local_assigns[:material] %>
<% material_class = material.class %>
<% no_setting = t('helpers.no_setting') %>

<div class="pt-1">
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:name) %></label>

        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.name %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <% if material.category.present? %>
        <div class="mb-3 border-bottom py-3">
          <label class="form-label mb-0" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:category) %></label>

          <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
            <%= material.category.name %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= t('materials.attributes.default_unit_weight') %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.default_unit_weight && material.default_unit_weight > 0 ? number_with_precision(material.default_unit_weight, precision: 1) : no_setting %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:unit_for_product) %></label>

        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.unit_for_product.name %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%# 左カラム: 基本発注量/入数（条件付き） %>
    <div class="col-md-6">
      <% if material.weight_based? %>
        <%# 重量ベース時 %>
        <div class="mb-3 border-bottom py-3">
          <label class="form-label mb-0" style="font-size: 1.0em;"><%= t('materials.attributes.unit_weight_for_order') %></label>
          <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
            <%= material.unit_weight_for_order ? number_with_precision(material.unit_weight_for_order, precision: 1) : no_setting %>
          </div>
        </div>
      <% elsif material.count_based? %>
        <%# 個数ベース時 %>
        <div class="mb-3 border-bottom py-3">
          <label class="form-label mb-0" style="font-size: 1.0em;"><%= t('materials.attributes.pieces_per_order_unit') %></label>
          <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
            <%= material.pieces_per_order_unit && material.pieces_per_order_unit > 0 ? "#{material.pieces_per_order_unit}#{material.unit_for_product.name}" : no_setting %>
          </div>
        </div>
      <% end %>
    </div>

    <%# 右カラム: 発注単位 %>
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= material_class.human_attribute_name(:unit_for_order) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material.unit_for_order.name %>
        </div>
      </div>
    </div>
  </div>

  <%# 発注グループ %>
  <% if material.order_group.present? %>
    <div class="row">
      <div class="col-md-12">
        <div class="mb-3 border-bottom py-3">
          <label class="form-label mb-0" style="font-size: 1.0em;"><%= t('materials.attributes.order_group') %></label>
          <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
            <%= material.order_group.name %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <h6 class="form-label text-muted" style="font-size: 1.1em;"><%= material_class.human_attribute_name(:description) %></h6>

  <div class="p-3 border rounded d-flex align-items-center justify-content-center" style="min-height: 210px;">
    <%= render 'shared/components/description_content', content: material.description %>
  </div>
</div>
