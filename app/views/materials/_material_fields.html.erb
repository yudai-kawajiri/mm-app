<div class="row">
  <%# 左カラム: 原材料名 %>
  <div class="col-md-6">
    <%= form_group_lg(f, :name) %>
  </div>

  <%# 右カラム: カテゴリー %>
  <div class="col-md-6">
    <%= form_group_lg(f, :category_id,
        field_type: :collection_select,
        collection: @material_categories
    ) %>
  </div>
</div>

<div class="row">
  <%# 左カラム: 商品単位 %>
  <div class="col-md-6">
    <%= form_group_lg(f, :unit_for_product_id,
        field_type: :collection_select,
        collection: current_user.units.where(category: :production),
        label: Material.human_attribute_name(:unit_for_product)
    ) %>
  </div>

  <%# 右カラム: デフォルト重量 %>
  <div class="col-md-6">
    <%= form_group_lg(f, :default_unit_weight,
        field_type: :number_field,
        step: :any,
        label: t('materials.attributes.default_unit_weight')
    ) %>
  </div>
</div>

<div class="row">
  <%# 左カラム: 発注単位 %>
  <div class="col-md-6">
    <%= form_group_lg(f, :unit_for_order_id,
        field_type: :collection_select,
        collection: current_user.units.where(category: :ordering),
        label: Material.human_attribute_name(:unit_for_order)
    ) %>
  </div>

  <%# 右カラム: 発注単位あたりの重量 %>
  <div class="col-md-6">
    <%= form_group_lg(f, :unit_weight_for_order,
        field_type: :number_field,
        step: :any,
        label: t('materials.attributes.unit_weight_for_order')
    ) %>
  </div>
</div>

<div class="row">
  <%# 発注単位あたりの個数（オプション） %>
  <div class="col-md-12">
    <%= form_group_lg(f, :pieces_per_order_unit,
        field_type: :number_field,
        step: 1,
        label: t('materials.attributes.pieces_per_order_unit_label')
    ) %>
    <p class="text-muted small"><%= t('materials.hints.pieces_per_order_unit') %></p>
  </div>
</div>

<!-- ✅ ここに追加 -->
<div class="row">
  <%# 発注グループ名（オプション） %>
  <div class="col-md-12">
    <%= form_group_lg(f, :order_group_name,
        field_type: :text_field,
        label: t('materials.attributes.order_group_name')
    ) %>
    <p class="text-muted small"><%= t('materials.hints.order_group_name') %></p>
  </div>
</div>

<div class="row">
  <%# 説明（Description） - 1行全体を使用 + 文字数カウンター %>
  <div class="col-md-12">
    <%= form_group_lg(f, :description,
        field_type: :text_area,
        rows: 5,
        character_counter: true,
        max_length: 1000
    ) %>
  </div>
</div>