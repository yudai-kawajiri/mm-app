<%# ページタイトルはラッパー(_resource_details)に任せるため、content_for を削除 %>


<%# 共通詳細ラッパーを呼び出し、ブロックで固有の詳細項目を挿入 %>
<%= render 'shared/resource_details',
    # ページタイトルとメインタイトルを翻訳ファイル(.title)から取得するよう変更
    title: t('.title', material_name: @material.name),
    resource: @material do %>

  <%# Material固有の詳細項目を挿入 %>
  <%= render 'material', material: @material %>
<% end %>
