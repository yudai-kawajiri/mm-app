<% title = t('materials.show.title', name: @material.name) %>

<%# ページタイトル %>
<%= content_for :title, title %>

<%= render 'shared/layouts/header_with_actions',
    title: title,
    resource: @material,
    is_show_page: true,
    is_form_page: false,
    is_index_page: false
%>

<%# 左カラム%>
<%= content_for :content_left do %>
  <%= render 'material_details', material: @material %>
<% end %>

<%= render(partial: 'shared/layouts/resource_layout_wrapper', locals: { content_left_title: t('forms.titles.basic_info', model: t('activerecord.models.material')), content_right_title: nil }) %>