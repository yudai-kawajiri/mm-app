<% material_class = @material.class %>
<% resource = @material %>
<% title = t('.title', material_name: @material.name) %>

<%# 共通ラッパーの代わりに、ここでページタイトルを定義 %>
<%= content_for :page_title, title %>
<div class="d-flex justify-content-between al">
  <h2><%= title %></h2>
</div>

<%# カード構造で全体を囲む (共通ラッパーの役割を代替) %>
<div class="card p-4 mb-4">

  <%# 詳細項目を挿入: _material_details.html.erb を呼び出し %>
  <%= render 'material_details', material: @material %>

  <%# アクションボタン (共通ラッパーの役割を代替) %>
  <div class="actions mt-4">
    <%# 編集 %>
    <%= link_to t('helpers.submit.edit'), url_for([:edit, resource]), class: "btn btn-primary me-2" %>

    <%# 戻る %>
    <%= link_to t('helpers.link.back'), url_for(resource.class), class: "btn btn-outline-secondary me-2" %>

    <%# 削除 %>
    <%= button_to t('helpers.link.destroy'), resource,
        method: :delete,
        data: { turbo_confirm: t('confirm.destroy') },
        class: 'btn btn-danger' %>
  </div>
</div>
