<% material_class = @material.class %>
<% resource = @material %>
<% material_name = @material.name %>

<%# 画面全体のタイトルを「まぐろ赤身」（原材料名）に設定 %>
<% title = t('materials.show.title', material_name: material_name) %>

<%# ページタイトル %>
<%= content_for :page_title, title %>

<%# タイトルとアクション %>
<div class="d-flex justify-content-between align-items-center mb-4 mt-n4">

  <%# 1. タイトル部分 %>
  <div>
    <h2 class="mb-0"><%= title %></h2>
  </div>

  <%# 2. アクションボタン %>
  <%= render 'shared/actions/resource_header_actions', resource: @material, is_show_page: true %>
</div>

<%# 詳細 %>
<div class="card p-4 mb-4 shadow-sm">
  <%= render 'material_details', material: @material %>
</div>