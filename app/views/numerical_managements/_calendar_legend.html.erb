<!-- 凡例 -->
<div class="mt-3">
  <div class="card">
    <div class="card-body">
      <h6 class="card-title"><%= t('numerical_managements.calendar.legend') %></h6>
      <div class="d-flex gap-4">
        <div><span class="badge bg-info">■</span> <%= t('numerical_managements.calendar.today') %></div>
        <div><span class="text-danger">●</span> <%= t('numerical_managements.calendar.sunday') %></div>
        <div><span class="text-primary">●</span> <%= t('numerical_managements.calendar.saturday') %></div>
        <div><span class="text-success fw-bold"><%= t('numerical_managements.index.actual') %></span> <%= t('numerical_managements.calendar.actual_entered') %></div>
        <div><span class="text-info"><%= t('numerical_managements.index.plan') %></span> <%= t('numerical_managements.calendar.plan_exists') %></div>
        <div><i class="bi bi-pencil"></i> <%= t('numerical_managements.calendar.edit_target') %></div>
        <div><i class="bi bi-calendar-plus text-info"></i> <%= t('numerical_managements.calendar.add_plan') %></div>
        <div><i class="bi bi-currency-yen text-success"></i> <%= t('numerical_managements.calendar.enter_actual') %></div>
      </div>
    </div>
  </div>
</div>
