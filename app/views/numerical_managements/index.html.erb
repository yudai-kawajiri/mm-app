<div class="container-fluid py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">数値管理ダッシュボード</h1>

    <div class="d-flex align-items-center gap-3">
      <!-- 月選択フォーム -->
      <form method="get" class="d-flex align-items-center gap-2">
        <label class="text-muted mb-0">対象月:</label>
        <input type="month" name="target_month" value="<%= @target_date.strftime('%Y-%m') %>" class="form-control form-control-sm" style="width: 150px;">
        <button type="submit" class="btn btn-primary btn-sm">表示</button>
      </form>

      <!-- 予算設定ボタン -->
      <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#budgetModal">
        予算設定
      </button>
    </div>
  </div>

  <!-- サマリーカード -->
  <div class="row g-3 mb-4">
    <div class="col-md-3">
      <div class="card border-primary">
        <div class="card-body p-3">
          <h6 class="card-title text-primary mb-2">月間予算</h6>
          <p class="h4 mb-0">¥5,000,000</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-success">
        <div class="card-body p-3">
          <h6 class="card-title text-success mb-2">実績売上</h6>
          <p class="h4 mb-0">¥2,500,000</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-info">
        <div class="card-body p-3">
          <h6 class="card-title text-info mb-2">計画売上</h6>
          <p class="h4 mb-0">¥1,800,000</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card border-warning">
        <div class="card-body p-3">
          <h6 class="card-title text-warning mb-2">予測売上</h6>
          <p class="h4 mb-0">¥4,300,000</p>
        </div>
      </div>
    </div>
  </div>

  <!-- 月末予測 3グループ横並び -->
  <div class="row g-3 mb-4">
    <!-- グループ1: 月末予測 -->
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">月末予測</h5>
        </div>
        <div class="card-body">
          <table class="table table-sm mb-0">
            <tbody>
              <tr>
                <td class="border-0">予測売上</td>
                <td class="border-0 text-end fw-bold">¥4,300,000</td>
              </tr>
              <tr>
                <td>予算達成率</td>
                <td class="text-end fw-bold">86.0%</td>
              </tr>
              <tr>
                <td>予測予算差</td>
                <td class="text-end fw-bold text-danger">-¥700,000</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- グループ2: ギャップ分析 -->
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header bg-warning text-dark">
          <h5 class="mb-0">ギャップ分析</h5>
        </div>
        <div class="card-body">
          <table class="table table-sm mb-0">
            <tbody>
              <tr>
                <td class="border-0">残り営業日数</td>
                <td class="border-0 text-end fw-bold">15日</td>
              </tr>
              <tr>
                <td>必要追加売上</td>
                <td class="text-end fw-bold">¥700,000</td>
              </tr>
              <tr>
                <td>1日あたり必要額</td>
                <td class="text-end fw-bold">¥46,667</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- グループ3: アクションプラン -->
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0">アクションプラン</h5>
        </div>
        <div class="card-body">
          <table class="table table-sm mb-0">
            <tbody>
              <tr>
                <td class="border-0">推奨日次目標</td>
                <td class="border-0 text-end fw-bold">¥46,667</td>
              </tr>
              <tr>
                <td colspan="2">
                  <div class="alert alert-success mb-0 p-2 small">
                    残り15日の計画に<br>
                    1日あたり<strong>¥46,667</strong>追加してください
                  </div>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- 日別明細テーブル（列幅調整） -->
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">日別明細</h5>
    </div>
    <div class="card-body p-0">
      <div style="max-height: 400px; overflow-y: auto;">
        <table class="table table-sm table-hover mb-0">
          <thead class="table-light sticky-top">
            <tr>
              <th style="width: 80px;">日付</th>
              <th class="text-end">目標</th>
              <th class="text-end">実績</th>
              <th class="text-end">計画</th>
              <th class="text-end">予測</th>
              <th class="text-end">差異</th>
              <th class="text-end">達成率</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td style="width: 80px;">10/1</td>
              <td class="text-end">¥161,290</td>
              <td class="text-end">¥120,000</td>
              <td class="text-end">¥0</td>
              <td class="text-end">¥120,000</td>
              <td class="text-end text-danger">-¥41,290</td>
              <td class="text-end">74.4%</td>
            </tr>
            <tr>
              <td style="width: 80px;">10/2</td>
              <td class="text-end">¥161,290</td>
              <td class="text-end">¥150,000</td>
              <td class="text-end">¥0</td>
              <td class="text-end">¥150,000</td>
              <td class="text-end text-danger">-¥11,290</td>
              <td class="text-end">93.0%</td>
            </tr>
            <tr>
              <td style="width: 80px;">10/3</td>
              <td class="text-end">¥161,290</td>
              <td class="text-end">¥180,000</td>
              <td class="text-end">¥0</td>
              <td class="text-end">¥180,000</td>
              <td class="text-end text-success">+¥18,710</td>
              <td class="text-end">111.6%</td>
            </tr>
            <tr>
              <td style="width: 80px;">10/16</td>
              <td class="text-end">¥161,290</td>
              <td class="text-end">¥0</td>
              <td class="text-end">¥100,000</td>
              <td class="text-end">¥100,000</td>
              <td class="text-end text-danger">-¥61,290</td>
              <td class="text-end">62.0%</td>
            </tr>
            <tr>
              <td style="width: 80px;">10/17</td>
              <td class="text-end">¥161,290</td>
              <td class="text-end">¥0</td>
              <td class="text-end">¥120,000</td>
              <td class="text-end">¥120,000</td>
              <td class="text-end text-danger">-¥41,290</td>
              <td class="text-end">74.4%</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- 予算設定モーダル（ページ最下部に追加） -->
<div class="modal fade" id="budgetModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">予算設定</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row mb-3">
            <div class="col-md-6">
              <label class="form-label">対象月</label>
              <input type="month" class="form-control" value="2025-10">
            </div>
            <div class="col-md-6">
              <label class="form-label">月間予算（円）</label>
              <input type="number" class="form-control" placeholder="5000000" step="1000">
            </div>
          </div>

          <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" id="autoGenerate" checked>
            <label class="form-check-label" for="autoGenerate">
              日別目標を自動生成する（均等配分）
            </label>
          </div>

          <hr>

          <h6 class="mb-3">製造計画カレンダー</h6>
          <p class="text-muted small">※ 製造計画の登録・編集は後で実装します</p>
          <button type="button" class="btn btn-outline-secondary btn-sm" disabled>
            製造計画カレンダーを開く（未実装）
          </button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">キャンセル</button>
        <button type="button" class="btn btn-primary">予算を設定</button>
      </div>
    </div>
  </div>
</div>
