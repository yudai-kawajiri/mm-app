<%= form_group_lg(f, :name) %>

<%= form_group_lg(f, :category_id,
                  field_type: :collection_select,
                  collection: @search_categories,
                  value_method: :id,
                  text_method: :name) %>

<%= form_group_lg(f, :status,
                  field_type: :select,
                  choices: Plan.statuses.keys.map { |k| [t("activerecord.enums.plan.status.#{k}"), k] }) %>

<%# 文字数カウンター %>
<%= form_group_lg(f, :description,
                  field_type: :text_area,
                  character_counter: true,
                  max_length: 1000) %>