    <div class="card-header bg-primary text-white">
      <h2 class="mb-0"><%= t('plans.edit.title', name: @plan.name) %></h2>
    </div>

    <div class="card-body">
      <%# フォームを呼び出し %>
      <%= render 'form', plan: @plan %>
    </div>
  </div>
</div>
