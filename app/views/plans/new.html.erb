<h1>新しい製造計画の作成</h1>

<%= form_with model: @plan, local: true do |f| %>

  <%# 未 バリデーションエラーの表示 %>
  <%#= render 'shared/error_messages', resource: @plan %>

  <div class="row">

    <%#  左カラム: 基本情報  %>
    <div class="col-md-6">
      <div class="card p-4">
        <h3>基本情報</h3>

        <%= render 'plan_fields', f: f %>

        <%# フォーム送信ボタン %>
        <div class="d-flex justify-content-start mt-4">
          <%= f.submit '登録', class: 'btn btn-primary me-2' %>
          <%= link_to '一覧に戻る', plans_path, class: 'btn btn-secondary' %>
        </div>
      </div>
    </div>

    <%# 右カラム: 商品リストと集計 %>
    <div class="col-md-6">
      <div class="card p-4">
        <h3>計画商品</h3>
        <%= render 'plan_products_fields', f: f %>
      </div>
    </div>

  </div>
<% end %>