<%# f: form builder をローカル変数として受け取ることを想定 %>

<div class="row">
  <%# 左カラム (col-md-6): 基本情報 %>
  <div class="col-md-6">
    <%# 製品名 %>
    <div class="mb-4">
      <%= f.label :name, class: "form-label h5" %>
      <%= f.text_field :name, class: "form-control form-control-lg" %>
    </div>

    <%# 品目番号 %>
    <div class="mb-4">
      <%= f.label :item_number, class: "form-label h5" %>
      <%= f.text_field :item_number, class: "form-control form-control-lg" %>
    </div>

    <%# 売価 %>
    <div class="mb-4">
      <%= f.label :price, class: "form-label h5" %>
      <div class="input-group input-group-lg">
        <%= f.number_field :price, class: "form-control", step: 1, min: 0 %>
        <span class="input-group-text">円</span>
      </div>
    </div>
  </div>

  <%# 右カラム (col-md-6): 分類・ステータス %>
  <div class="col-md-6">
    <%# カテゴリ %>
    <div class="mb-4">
      <%= f.label :category_id, class: "form-label h5" %>
      <%= f.collection_select :category_id, current_user.categories,
                              :id,
                              :name,
                              { prompt: "カテゴリを選択してください" },
                              { class: "form-select form-select-lg" } %>
    </div>

    <%# ステータス %>
    <div class="mb-4">
      <%= f.label :status, class: "form-label h5" %>
      <%= f.select :status, Product.statuses.keys.map { |k| [k.capitalize, k] },
                            { prompt: "ステータスを選択してください" },
                            { class: "form-select form-select-lg" } %>
    </div>
</div>

<%#  説明 - 全幅エリア %>
<div class="row">
  <div class="col-md-12">
    <div class="mb-4">
      <%= f.label :description, class: "form-label h5" %>
      <%= f.text_area :description, rows: 5, class: "form-control form-control-lg" %>
    </div>
  </div>
</div>

<%#  画像 - 全幅エリア %>
<div class="row">
  <div class="col-md-12">
    <div class="mb-4">
      <%= f.label :image, class: "form-label h5" %>
      <%= f.file_field :image, class: "form-control form-control-lg" %>
    </div>
  </div>
</div>