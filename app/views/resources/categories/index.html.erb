<%# カテゴリー一覧画面 %>
<%= content_for(:title, t('categories.index.title')) %>

<%= render 'shared/layouts/header_with_actions',
    title: t('categories.index.title'),
    resource: nil,
    is_index_page: true,
    is_form_page: false,
    is_show_page: false,
    new_path: new_resources_category_path %>

<div>
  <%
    name_with_reading = Proc.new do |category|
      if category.reading.present?
        "#{category.name} <span class='text-muted small'>（#{category.reading}）</span>".html_safe
      else
        category.name
      end
    end
  %>

  <%= render 'shared/components/resource_list',
      resources: @categories,
      resource_class: Resources::Category,
      search_target: :category_type,
      sort_options: [
        [t('categories.index.sort_options.name'), 'name'],
        [t('categories.index.sort_options.category_type'), 'category_type'],
        [t('categories.index.sort_options.created_at'), 'created_at']
      ],
      sort_placeholder: t('categories.index.sort_placeholder'),
      icon_mode: true,

      columns: [
        { header: :name, data: name_with_reading },
        { header: :category_type,
          data: Proc.new { |category| translate_enum_value(category, :category_type) }
        }
      ]
  %>

  <%= paginate @categories, theme: 'bootstrap-5' %>
</div>
