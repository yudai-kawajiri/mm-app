<%# 発注グループ詳細表示 %>
<% material_order_group = local_assigns[:material_order_group] %>
<% group_class = material_order_group.class %>

<div class="pt-1">
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= group_class.human_attribute_name(:name) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material_order_group.name %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= group_class.human_attribute_name(:reading) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= material_order_group.reading %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-4">
  <h6 class="form-label text-muted" style="font-size: 1.1em;"><%= t('material_order_groups.show.materials_using_this_group') %></h6>
  <div class="p-3 border rounded" style="min-height: 210px;">
    <% if material_order_group.materials.any? %>
      <div class="w-100">
        <%# テーブル形式で原材料とカテゴリーを表示 %>
        <table class="table table-sm table-hover mb-0">
          <thead>
            <tr>
              <th scope="col" class="border-top-0"><%= Resources::Material.human_attribute_name(:name) %></th>
              <th scope="col" class="border-top-0"><%= Resources::Material.human_attribute_name(:category) %></th>
            </tr>
          </thead>
          <tbody>
            <% material_order_group.materials.each do |material| %>
              <tr>
                <td>
                  <%= link_to material.name, scoped_path(:resources_material_path, material), class: 'text-decoration-none' %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= material.category&.name %>
                  </small>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="d-flex align-items-center justify-content-center" style="min-height: 180px;">
        <p class="text-muted mb-0"><%= t('material_order_groups.show.no_materials') %></p>
      </div>
    <% end %>
  </div>
</div>
