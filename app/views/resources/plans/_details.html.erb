<% plan = local_assigns[:plan] || local_assigns[:resource] %>
<% plan_class = plan.class %>
<% no_setting = t('helpers.no_setting') %>

<div class="row">
  <div class="col-md-6">
    <div class="mb-3 border-bottom py-3">
      <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= plan_class.human_attribute_name(:name) %></label>
      <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
        <%= plan.name %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="mb-3 border-bottom py-3">
      <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= plan_class.human_attribute_name(:reading) %></label>
      <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
        <%= plan.reading %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="mb-3 border-bottom py-3">
      <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= plan_class.human_attribute_name(:category_id) %></label>
      <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
        <%= plan.category.name %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="mb-3 border-bottom py-3">
      <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= plan_class.human_attribute_name(:status) %></label>
      <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
        <%= t("activerecord.enums.resources/plan.status.#{plan.status}") %>
      </div>
    </div>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-12">
    <h6 class="text-muted" style="font-size: 1.1em;"><%= plan_class.human_attribute_name(:description) %></h6>
    <div class="p-3 border rounded d-flex align-items-center justify-content-center" style="min-height: 150px;">
      <%= render 'shared/components/description_content', content: plan.description %>
    </div>
  </div>
</div>
