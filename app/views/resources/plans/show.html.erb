<%# 製造計画詳細画面 %>
<%= render 'shared/details/resource_show',
    resource: @plan,
    title: t('plans.show.title', name: @plan.name),
    content_left_partial: 'resources/plans/details',
    content_left_title: t('forms.titles.basic_info', model: t('activerecord.models.plan')),
    content_right_partial: 'resources/plans/product_details',
    content_right_title: t('forms.titles.plan_product'),
    additional_actions: [
      {
        label: t('plans.actions.preview'),
        path: print_company_resources_plan_path(company_slug: current_company.slug, id: @plan.id),
        class: 'btn-light',
        target: '_blank',
        icon: 'bi-printer'
      },
      {
        label: t('plans.csv.export_button'),
        path: export_csv_company_resources_plan_path(company_slug: current_company.slug, id: @plan.id),
        class: 'btn-success',
        icon: 'bi-filetype-csv'
      }
    ] %>
