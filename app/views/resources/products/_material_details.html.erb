<%# 商品原材料詳細表示 %>
<% product = local_assigns[:product] %>
<% product_materials = @product_materials || product.product_materials.order(:id) if product.present? %>

<% if product_materials.present? %>
  <table class="table">
    <thead>
      <tr class="border-bottom">
        <th class="text-muted"><%= t('activerecord.attributes.resources/material.name') %></th>
        <th class="text-end text-muted"><%= t('products.table_headers.quantity') %></th>
        <th class="text-start text-muted"><%= t('products.table_headers.unit') %></th>
        <th class="text-end text-muted"><%= t('products.table_headers.unit_weight') %></th>
        <th class="text-start text-muted"><%= t('products.table_headers.production_unit') %></th>
      </tr>
    </thead>
    <tbody>
      <% product_materials.each do |pm| %>
        <tr class="border-bottom">
          <td><%= pm.material.name %></td>

          <!-- 数量 -->
          <td class="text-end">
            <%= number_with_precision(pm.quantity, precision: 1) %>
          </td>

          <!-- 使用単位 -->
          <td class="text-start"><%= pm.material.unit_for_product&.name %></td>

          <!-- 分量 -->
          <td class="text-end">
            <%= number_with_precision(pm.unit_weight, precision: 1) %>
          </td>

          <!-- 製造単位 -->
          <td class="text-start"><%= pm.material.production_unit&.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-muted text-center" style="padding-top: 50px; font-size: 1.0em;">
    <%= t('products.product_material_fields.no_materials_set') %>
  </p>
<% end %>
