<%# 単位詳細表示 %>
<% unit = local_assigns[:unit] %>
<% unit_class = unit.class %>

<div class="pt-1">
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= unit_class.human_attribute_name(:name) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= unit.name %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0 text-muted" style="font-size: 1.0em;"><%= unit_class.human_attribute_name(:reading) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= unit.reading %>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= unit_class.human_attribute_name(:category) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= I18n.t("activerecord.enums.resources/unit.category.#{unit.category}") %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/components/description_section',
    resource: unit,
    resource_class: unit_class %>
