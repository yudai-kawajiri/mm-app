<% content_for :title, t('settings.title') %>

<div class="container mt-4">
  <h1 class="mb-4"><%= t('settings.title') %></h1>

  <div class="row">
    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <i class="bi bi-person-circle"></i> <%= t('settings.account.title') %>
          </h5>
          <p class="card-text"><%= t('settings.account.description') %></p>
          <%= link_to t('settings.account.button'), edit_user_registration_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>

    <div class="col-md-6 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <i class="bi bi-question-circle"></i> <%= t('settings.help.title') %>
          </h5>
          <p class="card-text"><%= t('settings.help.description') %></p>
          <%= link_to t('settings.help.button'), help_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  </div>
</div>
