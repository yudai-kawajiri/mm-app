<% resource = local_assigns[:resource] %>
<% content_left_title = local_assigns[:content_left_title] %>
<% content_right_title = local_assigns[:content_right_title] %>

<%# 2カラムコンテンツの枠組み %>
<div class="row">

  <%# 左カラムの枠 %>
  <div class="col-md-6 mb-4">
    <div class="card shadow-sm h-100 p-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="card-title h5 mb-0" style="font-size: 1.5em;"><%= content_left_title %></div>
      </div>
      <%= yield :content_left %>
    </div>
  </div>

  <%# 右カラムの枠 %>
  <div class="col-md-6 mb-4">
    <div class="card shadow-sm h-100 p-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
          <div class="card-title h5 mb-0" style="font-size: 1.5em;"><%= content_right_title %></div>
      </div>
      <%= yield :content_right %>
    </div>
  </div>
</div>
