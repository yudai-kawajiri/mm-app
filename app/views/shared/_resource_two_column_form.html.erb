<% f = local_assigns[:f] %>
<% basic_fields = local_assigns[:basic_fields] %>
<% detail_fields = local_assigns[:detail_fields] %>
<% resource_name = local_assigns[:resource_name] %>
<% custom_right_title = local_assigns[:custom_right_title] %>

<%= render 'shared/error_messages', resource: f.object %>

<%= render 'shared/resource_layout_wrapper',
  f: f,
  basic_fields: basic_fields,
  detail_fields: detail_fields,

  content_left_title: t('forms.titles.basic_info'),
  content_right_title: detail_fields.present? ? (custom_right_title.presence || t("#{resource_name}.form.detail_info", default: '詳細情報')) : nil
%>