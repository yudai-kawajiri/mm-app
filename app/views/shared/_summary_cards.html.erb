<%# 月次サマリーカード %>
<div class="row g-3 mb-4">
  <div class="col-md-3">
    <div class="card border-primary">
      <div class="card-body p-3">
        <h6 class="card-title text-primary mb-2">
          <%= t('numerical_managements.index.monthly_budget_card') %>
        </h6>
        <p class="h4 mb-0">
          <%= format_currency(forecast_data[:target_amount] || 0) %>
        </p>
        <small class="text-muted"><%= t('numerical_managements.index.target_amount_subtitle') %></small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-info">
      <div class="card-body p-3">
        <h6 class="card-title text-info mb-2">
          <%= t('numerical_managements.index.monthly_planned_revenue') %>
        </h6>
        <p class="h4 mb-0">
          <%= format_currency(forecast_data[:planned_amount] || 0) %>
        </p>
        <small class="text-muted"><%= t('numerical_managements.index.planned_total_subtitle') %></small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-success">
      <div class="card-body p-3">
        <h6 class="card-title text-success mb-2">
          <%= t('numerical_managements.index.cumulative_actual') %>
        </h6>
        <p class="h4 mb-0">
          <%= format_currency(forecast_data[:actual_amount] || 0) %>
        </p>
        <small class="text-muted"><%= t('numerical_managements.index.actual_until_yesterday') %></small>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-warning">
      <div class="card-body p-3">
        <h6 class="card-title text-warning mb-2">
          <%= t('numerical_managements.index.budget_achievement') %>
        </h6>
        <% achievement = forecast_data[:achievement_rate] || 0 %>
        <p class="h4 mb-0 <%= achievement_rate_color_class(achievement) %>">
          <%= number_to_percentage(achievement, precision: 1) %>
        </p>
        <small class="text-muted"><%= t('numerical_managements.index.achievement_as_of_yesterday') %></small>
      </div>
    </div>
  </div>
</div>
