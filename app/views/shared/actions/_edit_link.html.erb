<%# 必須引数: url %>
<%# オプション引数: custom_class %>
<% custom_class ||= nil %>

<%# リンクテキスト: helpers.link.edit を使用 %>
<% link_text = t('helpers.link.edit') %>

<% default_class = "btn btn-sm btn-outline-secondary" %>
<% final_class = "#{default_class} #{custom_class}".strip %>

<%= link_to link_text, url, class: final_class %>