<%# 必要引数: url  %>
<%# オプション引数: custom_class %>
<% custom_class ||= nil %>

<% link_text = t('helpers.link.new') %>
<% default_class = "btn btn-primary" %>
<%# 個々のカスタムクラスと結合。その際は空欄でもstripで対応 %>
<% final_class = "#{default_class} #{custom_class}".strip %>

<%= link_to link_text, url, class: final_class %>