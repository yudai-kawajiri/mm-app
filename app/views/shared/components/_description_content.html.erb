<%# 説明コンテンツ表示 %>
<%#
  機能:
  - テキストコンテンツを表示
  - 未設定時は「未設定」メッセージを中央表示

  必須引数:
  - content: 表示するテキストコンテンツ
%>
<% content = local_assigns[:content] %>

<% if content.present? %>
  <div class="w-100 text-dark" style="font-size: 1.1em;">
    <%= simple_format(content) %>
  </div>
<% else %>
  <span class="text-muted" style="font-size: 1.1em;">
    <%= t('helpers.no_setting') %>
  </span>
<% end %>
