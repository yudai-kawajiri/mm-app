<%# システムログテーブルの共通パーシャル %>
<%# 使用例: render 'shared/components/system_logs_table', logs: @recent_logs %>

<% if logs.present? %>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead class="table-light">
        <tr>
          <th><%= t('activerecord.attributes.system_log.created_at') %></th>
          <th><%= t('admin.system_logs.table_headers.company') %></th>
          <th><%= t('admin.system_logs.table_headers.store') %></th>
          <th><%= t('admin.system_logs.index.user') %></th>
          <th><%= t('admin.system_logs.index.model') %></th>
          <th><%= t('common.action') %></th>
          <th><%= t('admin.system_logs.index.record_id') %></th>
        </tr>
      </thead>
      <tbody>
        <% logs.each do |log| %>
          <tr>
            <td><%= l(log.created_at, format: :long) %></td>
            <td>
              <% if log.whodunnit.present? %>
                <% user = User.find_by(id: log.whodunnit) %>
                <%= user&.company&.name || '-' %>
              <% else %>
                -
              <% end %>
            </td>
            <td>
              <% if log.whodunnit.present? %>
                <% user = User.find_by(id: log.whodunnit) %>
                <%= user&.store&.name || '-' %>
              <% else %>
                -
              <% end %>
            </td>
            <td>
              <% if log.whodunnit.present? %>
                <% user = User.find_by(id: log.whodunnit) %>
                <%= user&.name || t('common.system') %>
              <% else %>
                <%= t('common.system') %>
              <% end %>
            </td>
            <td>
              <span class="badge bg-info">
                <%= t("activerecord.models.#{log.item_type.underscore}", default: log.item_type) %>
              </span>
            </td>
            <td>
              <% case log.event %>
              <% when 'create' %>
                <span class="badge bg-primary"><%= t('common.create') %></span>
              <% when 'update' %>
                <span class="badge bg-success"><%= t('common.update') %></span>
              <% when 'destroy' %>
                <span class="badge bg-danger"><%= t('common.destroy') %></span>
              <% else %>
                <span class="badge bg-secondary"><%= log.event %></span>
              <% end %>
            </td>
            <td>#<%= log.item_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <p class="text-muted text-center py-5">
    <%= t('admin.system_logs.index.no_logs') %>
  </p>
<% end %>
