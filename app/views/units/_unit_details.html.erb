<% unit = local_assigns[:unit] %>
<% unit_class = unit.class %>
<% no_setting = t('helpers.no_setting') %>

<div class="pt-1">
  <div class="row">
    <%# 項目1: 単位名 (左カラム) %>
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= unit_class.human_attribute_name(:name) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= unit.name %>
        </div>
      </div>
    </div>

    <%# 項目2: カテゴリ (右カラム) %>
    <div class="col-md-6">
      <div class="mb-3 border-bottom py-3">
        <label class="form-label mb-0" style="font-size: 1.0em;"><%= unit_class.human_attribute_name(:category) %></label>
        <div class="text-dark text-center pt-2" style="font-size: 1.1em; font-weight: 500;">
          <%= I18n.t("activerecord.enums.unit.category.#{unit.category}") %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# 説明欄 %>
<div class="mt-4">
  <h6 class="form-label text-muted" style="font-size: 1.1em;"><%= unit_class.human_attribute_name(:description) %></h6>
  <div class="p-3 border rounded d-flex align-items-center justify-content-center" style="min-height: 210px;">
    <%= render 'shared/components/description_content', content: unit.description %>
  </div>
</div>
