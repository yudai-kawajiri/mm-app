<%= content_for(:title, t('units.index.title')) %>
<%# 1.ヘッダー（タイトルとアクションボタン）%>
<%= render 'shared/header_with_actions', title: t('units.index.title') do %>
  <%# 2. アクションパーシャル %>
  <%= render 'shared/actions/resource_header_actions',
      is_index_page: true,
      new_path: new_unit_path
  %>
<% end %>

<%# 3. リソースリスト %>
<%= render 'shared/resource_list',
    resources: @units,
    resource_class: Unit,
    show_action_link: false,
    search_target: :category,

    columns: [
      { header: :name, data: :name },
      { header: :category,
        data: Proc.new { |unit| translate_enum_value(unit, :category) }
      }
    ]
%>

<%# ページネーションはラッパーの外側で呼び出す %>
<%= paginate @units, theme: 'bootstrap-5' %>